<form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" onsubmit="return confirm('Etes-vous sure de vouloir supprimer cet utilisateur?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="w-100 mb-2 btn btn-lg rounded-4 btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
</form>
