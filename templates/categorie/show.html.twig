<div class="shadow-lg p-3 mb-5 bg-body rounded">
    <div class="container">
        <table class="table table-striped table-hover ">
            <tbody>
                <tr class="table-active">
                    <th>Id</th>
                    <td>{{ categorie.id }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ categorie.Nom }}</td>
