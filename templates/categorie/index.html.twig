{% extends 'base.html.twig' %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
<h1>Liste des catégories</h1>
<div class="shadow-lg p-3 mb-5 bg-body rounded"> <br>
    <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">Nouveau catégorie <i class="fas fa-plus"></i></a> <br> <br>
    
    <div class="container">
        <form action="{{ path ('app_categorie_index') }}" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Recherche" name="recherche">
                <button class="btn btn-success" type="submit">Rechercher</button>
                <a href="{{ path('app_categorie_index') }}" class="btn btn-outline-primary">Actualiser</a>
            </div>
        </form> <br> 
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>NombreChaine</th>
                    <th>Prix</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for categorie in categories %}
                <tr>
                    <td>{{ categorie.id }}</td>
                    <td>{{ categorie.Nom }}</td>
                    <td>{{ categorie.NombreChaine }}</td>
                    <td>{{ categorie.Prix }}</td>
                    <td>
                        <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-warning"><i class="far fa-eye"></i></a>
                        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-success"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Pas d'enregistrement</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}
