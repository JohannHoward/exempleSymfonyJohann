{% extends 'base.html.twig' %}

{% block title %}Liste des chaines{% endblock %}

{% block body %}
<h1>Liste des chaines</h1>
<div class="shadow-lg p-3 mb-5 bg-body rounded"> <br>
    <a href="{{ path('app_chaine_new') }}" class="btn btn-primary">Nouveau chaine <i class="fas fa-plus"></i></a> <br> <br>
    <div class="container">
        <form action="{{ path ('app_chaine_index') }}" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Recherche" name="recherche">
                <button class="btn btn-success" type="submit">Rechercher</button>
                <a href="{{ path('app_chaine_index') }}" class="btn btn-outline-primary">Actualiser</a>
            </div>
        </form> <br> 
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Nom</th>
                    <th>Canal NÂ°</th>
                    <th>Type chaine</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for chaine in chaines %}
                <tr>
                    <td>{{ chaine.id }}</td>
                    <td>{{ chaine.Nom }}</td>
                    <td>{{ chaine.Numero }}</td>
                    <td>{{ chaine.TypeChaine }}</td>
                    <td>
                        <a href="{{ path('app_chaine_show', {'id': chaine.id}) }}" class="btn btn-warning"><i class="far fa-eye"></i></a>
                        <a href="{{ path('app_chaine_edit', {'id': chaine.id}) }}" class="btn btn-success"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Pas d'enregistrement</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>


</div>

{% endblock %}