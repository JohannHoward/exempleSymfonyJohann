{% extends 'base.html.twig' %}

{% block title %}Abonnement{% endblock %}

{% block body %}
    <h1>Abonnement</h1>
    <div class="shadow-lg p-3 mb-5 bg-body rounded">
        <div class="container">
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ abonnement.id }}</td>
                    </tr>
                    <tr>
                        <th>Date_debut</th>
                        <td>{{ abonnement.DateDebut ? abonnement.DateDebut|date('Y-m-d') : '' }}</td>
                    </tr>
                    <tr>
                        <th>Date_Fin</th>
                        <td>{{ abonnement.DateFin ? abonnement.DateFin|date('Y-m-d') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    
        <div class="container ">
            <div class="row mt-4">
                <div class="col">
                    {{ include('abonnement/_delete_form.html.twig') }}
                </div>
                <div class="col">
                    <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}"
                        class="w-100 mb-2 btn btn-lg rounded-4 btn-success"><i class="fas fa-edit"></i> Modifier</a>
                </div>
                <div class="col">
                    <a href="{{ path('app_abonnement_index') }}" class="w-100 mb-2 btn btn-lg rounded-4 btn-secondary"><i
                            class="fa fa-list"></i> Liste</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
