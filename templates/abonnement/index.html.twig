{% extends 'base.html.twig' %}

{% block title %}Liste des abonnements{% endblock %}

{% block body %}
<h1>Liste des abonnements</h1>
<div class="shadow-lg p-3 mb-5 bg-body rounded"> <br>
    <a href="{{ path('app_abonnement_new') }}" class="btn btn-primary">Nouveau enregistrement <i
            class="fas fa-plus"></i></a><br> <br>

    <div class="container">
        <form action="{{ path ('app_abonnement_index') }}" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Recherche" name="recherche">
                <button class="btn btn-success" type="submit">Rechercher</button>
                <a href="{{ path('app_abonnement_index') }}" class="btn btn-outline-primary">Actualiser</a>
            </div>
        </form> <br>
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>Client</th>
                    <th>Categorie</th>
                    <th>Date_debut</th>
                    <th>Date_Fin</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for abonnement in abonnements %}
                <tr>
                    <td>{{ abonnement.id }}</td>
                    <td>{{ abonnement.client }}</td>
                    <td>{{ abonnement.categorie }}</td>
                    <td>{{ abonnement.DateDebut ? abonnement.DateDebut|date('d-m-Y') : '' }}</td>
                    <td>{{ abonnement.DateFin ? abonnement.DateFin|date('d-m-Y') : '' }}</td>
                    <td>
                        <a href="{{ path('app_abonnement_show', {'id': abonnement.id}) }}" class="btn btn-warning"><i class="far fa-eye"></i></a>
                        <a href="{{ path('app_abonnement_edit', {'id': abonnement.id}) }}" class="btn btn-success"><i
                                class="far fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Pas d'enregistrement</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}