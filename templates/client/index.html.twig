{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
<h1>Liste des clients</h1>
<div class="shadow-lg p-3 mb-5 bg-body rounded"> <br>
    <a href="{{ path('app_client_new') }}" class="btn btn-primary">Nouveau client <i class="fas fa-plus"></i></a> <br>
    <br>
    <div class="container">
        <form action="{{ path ('app_client_index') }}" method="get">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Recherche" name="recherche">
                <button class="btn btn-success" type="submit">Rechercher</button>
                <a href="{{ path('app_client_index') }}" class="btn btn-outline-primary">Actualiser</a>
            </div>
        </form> <br>
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr class="table-active">
                    <th>Id</th>
                    <th>NÂ° C.I.N</th>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Telephone</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
                {% for client in clients %}
                <tr>
                    <td>{{ client.id }}</td>
                    <td>{{ client.NumCIN }}</td>
                    <td>{{ client.Nom }}</td>
                    <td>{{ client.Prenom }}</td>
                    <td>{{ client.Telephone }}</td>
                    <td>
                        <a href="{{ path('app_client_show', {'id': client.id}) }}" class="btn btn-warning"><i class="far fa-eye"></i></a>
                        <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-success"><i
                                class="far fa-edit"></i></a>
                    </td>
                </tr>
                {% else %}
                <tr>
                    <td colspan="4">Pas d'enregistrement</td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>

{% endblock %}