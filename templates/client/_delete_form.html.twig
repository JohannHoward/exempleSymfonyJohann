<form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Etes-vous sure de vouloir supprimer cette client?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button class="w-100 mb-2 btn btn-lg rounded-4 btn-danger"><i class="fas fa-trash"></i> Supprimer</button>
</form>
