{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>A propos de  {{ client.Nom }} {{ client.Prenom }}</h1>
    <div class="shadow-lg p-3 mb-5 bg-body rounded">
        <div class="container">
            <table class="table table-striped table-hover ">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ client.id }}</td>
                    </tr>
                    <tr>
                        <th>NumCIN</th>
                        <td>{{ client.NumCIN }}</td>
                    </tr>
                    <tr>
                        <th>Nom</th>
                        <td>{{ client.Nom }}</td>
                    </tr>
                    <tr>
                        <th>Prenom</th>
                        <td>{{ client.Prenom }}</td>
                    </tr>
                    <tr>
                        <th>Telephone</th>
                        <td>{{ client.Telephone }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    
        <div class="container ">
            <div class="row mt-4">
                <div class="col">
                    {{ include('client/_delete_form.html.twig') }}
                </div>
                <div class="col">
                    <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                        class="w-100 mb-2 btn btn-lg rounded-4 btn-success"><i class="fas fa-edit"></i> Modifier</a>
                </div>
                <div class="col">
                    <a href="{{ path('app_client_index') }}" class="w-100 mb-2 btn btn-lg rounded-4 btn-secondary"><i
                            class="fa fa-list"></i> Liste</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
